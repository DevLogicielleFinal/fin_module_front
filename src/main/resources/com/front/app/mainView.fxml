<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.front.app.Controller.MainController"
            prefHeight="159.0" prefWidth="442.0">

    <!-- Header Section -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0;">
            <Label text="Application de gestion de projet"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Center Section -->
    <center>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label text="Bienvenue !"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Commencez par vous identifier ou vous enregistrer :" />
            <HBox spacing="10">
                <Button text="Login" onAction="#goToLoginPage" />
                <Button text="Register" onAction="#goToRegisterPage" />
            </HBox>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <Label fx:id="statusLabel"
               text="Connectez-vous ou inscrivez-vous !"
               style="-fx-padding: 5; -fx-font-size: 12px;" />
    </bottom>
</BorderPane>

